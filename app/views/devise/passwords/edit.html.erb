<center>
	<h2 class='app_name'><%= t('general.app_name') %></h2>
</center>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-auth' }) do |f| %>
  
  <div class="form-auth-fields">
	  <%= f.hidden_field :reset_password_token %>
	  <%= f.password_field :password, class: 'input-block-level', placeholder: t('activerecord.attributes.user.password'), autofocus: true, autocomplete: "off" %>
	  <%= f.password_field :password_confirmation, class: 'input-block-level', placeholder: t('activerecord.attributes.user.password_confirmation'), autocomplete: "off" %>
  </div>
  <div class="bootstrap_flash"><%=bootstrap_flash%></div>

  <div><%= f.submit t("devise.links.change_my_password")%></div>
<% end %>

<div class="navbar navbar-fixed-bottom">
  <div class="navbar-inner">
    <div class="container">
    	<div class="row">
    		<div class="span4">
				<%- if controller_name != 'sessions' %>
				  <%= link_to t('devise.links.log_in'), new_session_path(resource_name), class: "navbar-text"  %>
				<% end -%>
    		</div>
    		<div class="span4">
		      	<center><p class="navbar-text">&copy; <%="#{t('general.company_name')} - #{Time.now.year}"%></p></center>
    		</div>
    		<div class="span4">
				<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
					<%= link_to t('devise.links.sign_up'), new_registration_path(resource_name), class: "navbar-text pull-right" %>
				<% end -%>
    		</div>
    	</div>
    </div>
  </div>
</div>
