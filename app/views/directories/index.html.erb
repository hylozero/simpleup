<%- model_class = Directory -%>
<%- title("DiretÃ³rios") -%>
<%- tag_title(model_class.model_name.human.titleize.pluralize) -%>


<table class="table table-striped table-hover clicable">
  <thead>
    <tr>
      <th><%=i('icon-folder-close')%> <%= model_class.human_attribute_name(:title) %></th>
      <th><%=i('icon-user')%> <%= model_class.human_attribute_name(:owner_id) %></th>
      <th><%=i('icon-calendar')%> <%= model_class.human_attribute_name(:created_at) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @directories.each do |directory| %>
      <tr id="<%=directory.id%>">
        <td><%= directory.title %></td>
        <td><%= directory.owner.email %></td>
        <td><%=l directory.created_at, format: :short %></td>
        <td>
          <%= link_to i('icon-pencil'),
                      edit_directory_path(directory), :class => 'btn btn-mini' %>
          <%= link_to i('icon-trash'),
                      directory_path(directory),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_directory_path,
            :class => 'btn btn-primary' %>
